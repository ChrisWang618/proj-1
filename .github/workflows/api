name: Deploy API Integration

on: 
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set environment variable from secret
      run: echo "API_URL=${{ secrets.API_URL }}" >> $GITHUB_ENV

    - name: Use API URL
      run: curl -X POST $API_URL
