name: Deploy Project

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Check out repository
        uses: actions/checkout@v2

      - name: Install dependencies
        run: npm install

     - name: Replace API URL in JavaScript
  run: sed -i 's|<API_URL_PLACEHOLDER>|${{ secrets.API_URL }}|g' path/to/your/script.js


      - name: Build project
        run: npm run build

      - name: Deploy
        run: npm run deploy
